	if s.left.IsSatisfiedBy({{.DomainName}}) || s.right.IsSatisfiedBy({{.DomainName}}) {
		return nil
	}
	return errors.ErrBusinessRuleViolation.WithDetails("reason", "neither condition is satisfied")
