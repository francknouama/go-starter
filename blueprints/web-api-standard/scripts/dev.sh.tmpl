#!/bin/bash

# Development script for {{.ProjectName}}
set -e

echo "ðŸš€ Starting {{.ProjectName}} development environment..."

# Check if .env file exists
if [ ! -f .env ]; then
    echo "ðŸ“‹ Creating .env file from .env.example..."
    cp .env.example .env
    echo "âœ… Please edit .env file with your configuration"
fi

{{- if ne .DatabaseDriver ""}}
# Check if docker-compose is available and start database
if command -v docker-compose &> /dev/null; then
    echo "ðŸ³ Starting database with Docker Compose..."
    docker-compose up -d {{if eq .DatabaseDriver "postgres"}}postgres{{else if eq .DatabaseDriver "mysql"}}mysql{{end}}
    
    # Wait for database to be ready
    echo "â³ Waiting for database to be ready..."
    sleep 5
    
    # Run migrations
    echo "ðŸ”„ Running database migrations..."
    if [ -f "./scripts/migrate.sh" ]; then
        ./scripts/migrate.sh
    fi
else
    echo "âš ï¸  Docker Compose not found. Please ensure your database is running manually."
fi
{{- end}}

# Install dependencies
echo "ðŸ“¦ Installing dependencies..."
go mod download
go mod tidy

# Install development tools if not present
if ! command -v air &> /dev/null; then
    echo "ðŸ”§ Installing air for hot reload..."
    go install github.com/cosmtrek/air@latest
fi

# Start the application with hot reload
echo "ðŸ”¥ Starting application with hot reload..."
echo "ðŸ“ Application will be available at http://localhost:8080"
echo "ðŸ©º Health check: http://localhost:8080/health"
{{- if ne .DatabaseDriver ""}}
echo "ðŸ‘¥ API docs: http://localhost:8080/api/openapi.yaml"
{{- end}}
echo ""
echo "Press Ctrl+C to stop..."

# Check if air config exists, if not create a basic one
if [ ! -f .air.toml ]; then
    cat > .air.toml << 'EOF'
root = "."
testdata_dir = "testdata"
tmp_dir = "tmp"

[build]
  args_bin = []
  bin = "./tmp/main"
  cmd = "go build -o ./tmp/main ./cmd/server"
  delay = 1000
  exclude_dir = ["assets", "tmp", "vendor", "testdata"]
  exclude_file = []
  exclude_regex = ["_test.go"]
  exclude_unchanged = false
  follow_symlink = false
  full_bin = ""
  include_dir = []
  include_ext = ["go", "tpl", "tmpl", "html", "yaml", "yml"]
  include_file = []
  kill_delay = "0s"
  log = "build-errors.log"
  poll = false
  poll_interval = 0
  rerun = false
  rerun_delay = 500
  send_interrupt = false
  stop_on_root = false

[color]
  app = ""
  build = "yellow"
  main = "magenta"
  runner = "green"
  watcher = "cyan"

[log]
  main_only = false
  time = false

[misc]
  clean_on_exit = false

[screen]
  clear_on_rebuild = false
  keep_scroll = true
EOF
fi

# Start with air for hot reload
air